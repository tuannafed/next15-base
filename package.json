{
  "name": "nextjs15-base",
  "version": "1.0.0",
  "author": "TuanNA <tuanna.fed@gmail.com>",
  "private": true,
  "type": "module",
  "keywords": [
    "typescript",
    "react",
    "hooks",
    "utils",
    "helpers",
    "nextjs",
    "nextjs15"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,json}\" --ignore-path .prettierignore",
    "prepare": "husky",
    "preinstall": "npx -y only-allow pnpm",
    "precommit": "lint-staged && validate-branch-name",
    "clean": "rimraf .turbo node_modules .next .output"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "clsx": "^2.1.1",
    "lodash": "^4.17.21",
    "next": "15.1.3",
    "next-auth": "5.0.0-beta.25",
    "qs": "^6.13.1",
    "query-string": "^9.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-tna": "^1.2.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/eslintrc": "^3",
    "@types/lodash": "^4.17.14",
    "@types/node": "^20",
    "@types/qs": "^6.9.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.1.3",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "postcss": "^8",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "pnpm format",
      "next lint --fix --file",
      "git add ."
    ],
    "*.json": [
      "pnpm format",
      "git add ."
    ]
  },
  "validate-branch-name": {
    "pattern": "^(feature|fix|hotfix|release|chore)/TASK-\\d+-.+$",
    "errorMsg": "Branch name must start with [feature/fix/hotfix/release/chore]/TASK-0-branch-name"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.17.0"
  }
}
